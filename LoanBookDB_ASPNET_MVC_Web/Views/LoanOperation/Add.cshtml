@using LoanBookDB_ASPNET_MVC_Web.Models;
@model LoanOperationViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<div class="form-group col-lg-6 offset-lg-3">
    @using (Html.BeginForm("Add", "LoanOperation", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.Label("Book:")<br />
            @Html.DropDownListFor(x => x.BookId, (List<SelectListItem>)ViewBag.BookList, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.Label("Customer:")<br />
            @Html.DropDownListFor(x => x.CustomerId, (List<SelectListItem>)ViewBag.CustomerList, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="date" class="form-control" name="LoanStarts"/>
        </div>

        <div class="form-group" align="right">
            <button type="submit" class="btn btn-info">Lend Book</button>
        </div>
    }
</div>


